@model CoreAirPlus.ViewModel.HostViewModel

@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<h4>HostViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.FirstName)
                @Html.EditorFor(model => model.FirstName)<br />
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.LastName)
                @Html.EditorFor(model => model.LastName)<br />
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Email)
                @Html.EditorFor(model => model.Email)<br />
                @Html.ValidationMessageFor(model => model.Email)
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Password)
                @Html.EditorFor(model => model.Password)<br />
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <div class="form-group">
                <input type="submit" value="Create" formmethod="post" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back To Login","LoginDirect","Home")

